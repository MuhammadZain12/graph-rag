# ============================================================
# Graph RAG Configuration
# ============================================================
# Copy this file to .env and fill in your values

# --- Neo4j Database ---
NEO4J_URI=
NEO4J_USERNAME=
NEO4J_PASSWORD=

# --- LLM Provider Selection ---
# Options: "ollama", "gemini", "vllm"
LLM_PROVIDER=

# --- Ollama (if LLM_PROVIDER=ollama) ---
OLLAMA_BASE_URL=
OLLAMA_MODEL=

# --- Gemini (if LLM_PROVIDER=gemini) ---
GEMINI_API_KEY=
GEMINI_MODEL=

# --- vLLM (if LLM_PROVIDER=vllm) ---
VLLM_BASE_URL=
VLLM_API_KEY=
VLLM_MODEL=

# --- LangSmith Tracing ---
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=project-graph-rag

# --- Feature Flags ---
ENABLE_GUARDRAIL=
